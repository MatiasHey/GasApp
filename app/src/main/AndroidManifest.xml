<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gasapp.hey.gas" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GasActionBarTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

        </activity>

        <activity
            android:name=".Intro"
            android:label="Gas">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegistroUsuario"
            android:label="RegistroUsuario">
        </activity>

       <activity
           android:name=".LoginActivity"
           android:label="Login">
       </activity>

       <activity android:name=".AgregarUsuario"
           android:label="Agregar Usuario"
           android:parentActivityName=".MainActivity">

       </activity>

        <activity
            android:name=".Pedido"
            android:label="Ingresar Pedido"
            android:parentActivityName=".MainActivity">

        </activity>

        <activity
            android:name=".Historial"
            android:label="Historial de Pedidos"
            android:parentActivityName=".MainActivity">

        </activity>

        <activity
            android:name=".FormasPago"
            android:label="Formas de Pago"
            android:parentActivityName=".MainActivity">

        </activity>

    <activity android:name=".ConfirmacionPedido"
        android:label="Agregar Usuario"
        android:parentActivityName=".Pedido">

    </activity>


    </application>

</manifest>
